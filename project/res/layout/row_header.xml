<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@android:color/holo_blue_light"
    android:orientation="horizontal" >

    <com.idunnolol.sotm.widget.TextView
        android:id="@+id/label_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAppearance="@android:style/TextAppearance.Inverse"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_size_row_header"
        android:textStyle="bold"
        app:font="@string/font_crash_landing" />

    <include layout="@layout/include_vertical_divider" />

    <com.idunnolol.sotm.widget.TextView
        android:id="@+id/add_button"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:background="?android:attr/listChoiceBackgroundIndicator"
        android:gravity="center"
        android:text="@string/add_symbol"
        android:textAppearance="@android:style/TextAppearance.Inverse"
        android:textSize="@dimen/text_size_row_button"
        android:textStyle="bold" />

</LinearLayout>